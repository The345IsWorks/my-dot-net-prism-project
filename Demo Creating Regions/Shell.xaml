<Window x:Class="Demo_Creating_Regions.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.codeplex.com/prism"
        xmlns:inf="clr-namespace:PrismDemo.Infrastructure;assembly=PrismDemo.Infrastructure"
        Title="Shell" Height="300" Width="300">
    <DockPanel>
        <ItemsControl DockPanel.Dock="Top" cal:RegionManager.RegionName="{x:Static inf:RegionNames.ToolbarRegion}" />
        <ContentControl cal:RegionManager.RegionName="{x:Static inf:RegionNames.ContentRegion}" />
    </DockPanel>
</Window>
